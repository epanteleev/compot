;int max(int a, int b) {
;    if (a > b) {
;        return a;
;    }
;    return b;
;}
define i32 @max(%a: i32, %b: i32) {
entry:
  %retval = alloc i32
  %aAddr = alloc i32
  %bAddr = alloc i32
  store i32* %aAddr, %a
  store i32* %bAddr, %b
  %0 = load i32 %aAddr
  %1 = load i32 %bAddr
  %cmp = icmp sgt i32 %0, %1
  br u1 %cmp label ifThen, label ifEnd

ifThen:
  %2 = load i32 %aAddr
  store i32* %retval, %2
  br label return

ifEnd:
  %3 = load i32 %bAddr
  store i32* %retval, %3
  br label return

return:
  %4 = load i32 %retval
  ret i32 %4
}

