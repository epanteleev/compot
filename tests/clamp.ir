;int clamp(int from, int value, int to) {
;    int b = min(value, to);
;    return max(from, b);
;}
define i32 @clamp(%from: i32, %value: i32, %to: i32) {
entry:
  %fromAddr  = alloc i32
  %valueAddr = alloc i32
  %toAddr    = alloc i32
  %b         = alloc i32
  store i32* %fromAddr, %from
  store i32* %valueAddr, %value
  store i32* %toAddr, %to
  %0 = load i32 %valueAddr
  %1 = load i32 %toAddr
  %call = call i32 @min(%0: i32, %1: i32)
  store i32* %b, %call
  %2 = load i32 %fromAddr
  %3 = load i32 %b
  %call1 = call i32 @max(%2: i32, %3: i32)
  ret i32 %call1
}

