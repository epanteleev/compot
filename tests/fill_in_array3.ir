define void @fill_in_array(%array: ptr, %len: i32) {
entry:
  %i = alloc i32
  store ptr %i, i32 0
  br label %forCond

forCond:
  %0 = load i32 %i
  %cmp = icmp slt i32 %0, %len
  br u1 %cmp label %forBody, label %forEnd

forBody:
  %1 = load i32 %i
  %arrayidx = gep i32, ptr %array, i32 %1
  store ptr %arrayidx, i32 %1
  br label %forInc

forInc:
  %3 = load i32 %i
  %inc = add i32 %3, 1
  store ptr %i, i32 %inc
  br label %forCond

forEnd:
  %arraydecay = gep i32, ptr %array, i32 0
  call void @printIntArray(%arraydecay: ptr, %len: i32)
  ret void
}
