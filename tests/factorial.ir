extern void printInt(i32)

define u64 main() {
entry:
        %1 = call i32 factorial(8: i32)
	call void printInt(%1: i32)
        ret u64 0
}


define i32 factorial(%val: i32) {
entry:
  %valAddr = alloc i32* 1
  %factorial = alloc i32* 1
  %i = alloc i32* 1
  store i32* %valAddr, %val
  store i32* %factorial, 1
  store i32* %i, 1
  br label forCond

forCond:
  %0 = load i32 %i
  %1 = load i32 %valAddr
  %cmp = icmp sle i32 %0, %1
  br u1 %cmp label forBody, label forEnd

forBody:
  %2 = load i32 %factorial
  %3 = load i32 %i
  %mul = mul i32 %2, %3
  store i32* %factorial, %mul
  br label forInc

forInc:
  %4 = load i32 %i
  %inc = add i32 %4, 1
  store i32* %i, %inc
  br label forCond

forEnd:
  %5 = load i32 %factorial
  ret i32 %5
}
