extern void @printByteArray(ptr, i32)

@str = constant <i8 x 4> { i8: 4, i8: 5, i8: 6, i8: 7 }

define i32 @main() {
entry:
  %adr = alloc <i8 x 12>
  %first = gep i8, ptr %adr, i32 0
  memcpy ptr %first, ptr @str, u32 12
  call void @printByteArray(%first: ptr, 4: i32) br label %exit

exit:
  ret i32 0
}